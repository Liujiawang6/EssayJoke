<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#00ffffff"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:background="@drawable/mycustom_dialog_bg"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="35dp">

            <!--对话框标题部分-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_15"
                android:id="@+id/id_dialog_title"
                android:gravity="center"
                android:text="hhhhhhhh"
                android:textColor="#3f454f"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_20"
                android:visibility="visible"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:id="@+id/title_content_division"
                android:background="@color/gray_line"/>

            <!--对话框内容部分-->
            <TextView
                android:id="@+id/id_tv_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="@dimen/margin_25"
                android:paddingBottom="@dimen/margin_25"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"
                android:gravity="center"
                android:textSize="@dimen/text_18"
                android:maxLines="4"
                android:textColor="@color/custom_dialog_message"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:id="@+id/title_content_division2"
                android:background="@color/gray_line"/>

            <!--对话框按钮部分-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/id_tv_cancel"
                    android:layout_width="0dp"
                    style="@style/button_common_style"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/mycustom_dialog_cancel_selector"
                    android:text="cancel"
                    android:textColor="@color/custom_dialog_message"/>

                <TextView
                    android:id="@+id/id_tv_confirm"
                    android:layout_width="0dp"
                    style="@style/button_common_style"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/mycustom_dialog_confirm_ok_selector"
                    android:text="ok"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/id_dialog_title_imv"
            android:src="@drawable/icon_login_single"
            android:scaleType="center"
            android:background="#00ffffff"
            android:visibility="gone"/>
    </FrameLayout>

</LinearLayout>