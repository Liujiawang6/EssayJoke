<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.DialogThemeActivity">

    <RelativeLayout
        android:layout_width="@dimen/dimen_200"
        android:layout_height="@dimen/dimen_160"
        android:layout_gravity="center_horizontal"
        android:background="@color/black"
        android:id="@+id/root_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="@dimen/dimen_200"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_40"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_alert_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="标题"
                android:textColor="@color/white"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/dialog_alert_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dimen_25"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/dimen_25"
                android:text="提醒内容sssss"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:visibility="gone" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/buttom_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_alert_positive_left"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_35"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="30sp" />

        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>