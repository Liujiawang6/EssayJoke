<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/bg_light_blue" />
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="@color/bg_light_blue" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/gray" />
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="@color/gray" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <solid android:color="@color/bule" />
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="@color/bule" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/bule" />
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="@color/bule" />
        </shape>
    </item>

</selector>