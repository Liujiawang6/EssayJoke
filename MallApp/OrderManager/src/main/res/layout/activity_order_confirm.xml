<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.OrderConfirmActivity">


    <TextView
        android:id="@+id/mSelectShipTextView"
        style="@style/MatchWrap"
        android:text="@string/choose_ship"
        android:textColor="@color/text_light_dark"
        android:drawableRight="@drawable/icon_arrow"
        android:background="@drawable/border_all"
        android:padding="@dimen/common_padding"/>
    <RelativeLayout
        android:id="@+id/mShipLayout"
        style="@style/MatchWrap"
        android:background="@drawable/border_all"
        android:paddingTop="@dimen/common_padding_middle"
        android:paddingBottom="@dimen/common_padding_middle"
        android:visibility="gone"
        android:layout_marginTop="@dimen/common_margin"
        android:layout_below="@id/mSelectShipTextView">
        <TextView
            android:id="@+id/mShipNameTextView"
            style="@style/order_ship_name"/>
        <TextView
            android:id="@+id/mShipAddressTv"
            android:background="@null"
            android:paddingBottom="@dimen/common_padding_small"
            android:layout_below="@id/mShipNameTextView"
            style="@style/order_ship_address"/>
        <ImageView
            style="@style/WrapWrap"
            android:layout_marginRight="@dimen/common_margin"
            android:src="@drawable/icon_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mOrderGoodsRecyclerView"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin"
        android:layout_below="@id/mShipLayout"
        style="@style/commonRecyclerView"/>
    <RelativeLayout
        android:background="@drawable/border_all"
        android:padding="@dimen/common_padding"
        style="@style/MatchWrap"
        android:layout_below="@id/mOrderGoodsRecyclerView">
        <TextView
            style="@style/WrapWrap"
            android:text="@string/payment_distribution"
            android:layout_centerVertical="true"/>
        <TextView
            style="@style/WrapWrap"
            android:text="@string/pay_and_ship"
            android:textColor="@color/text_light_dark"
            android:layout_alignParentRight="true"
            android:lineSpacingMultiplier="1.3"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mBottomLayout"
        style="@style/MatchWrap"
        android:background="@drawable/border_all"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/mTotalPriceTv"
            style="@style/WrapWrap"
            android:textColor="@color/common_red"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/mSubmitOrderButton"
            style="@style/WrapWrap"
            android:text="@string/submit_order"
            android:textSize="@dimen/text_big_size"
            android:textColor="@color/common_white"
            android:background="@color/common_red"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</RelativeLayout>